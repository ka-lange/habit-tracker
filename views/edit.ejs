<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- boostrap 5.2 CSS link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="public/css/style.css">
    <link id="colorStylesheet" rel="stylesheet" href="public/css/lightmodeStyle.css">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Open+Sans:wght@300;700&display=swap" rel="stylesheet">

    <title>Document</title>
</head>
<body class="mx-5">

        <div class="d-flex justify-content-between align-items-center border-bottom">
            <a href="/"><img id="logo" style="height: 20vh" src="public/images/logolight.png"></a>
            <h1 class="font-anton mx-4">HABIT TRACKER</h1>
        </div>
        
        <!-- see if you can get this style in stylesheet instead of inline here -->
        <navbar class="container d-flex flex-column align-items-center">
            <div>
                <i class="m-2 bi bi-plus-circle icon-lg icon-color-primary" data-bs-toggle="modal" data-bs-target="#addHabitModal"></i>
                <a href="/" class="m-2"><i class="bi bi-house icon-lg icon-color-primary"></i></a> 
                <i id="darklighttoggle" class="m-2 bi bi-toggle-off icon-lg icon-color-primary"></i>
            </div>
        </navbar>

        <!-- habit card -->
<div class="row ">
        <!-- MAKE HABIT -->
        <div class="col container d-flex flex-column align-items-center mt-5">
            <h1 class="font-anton">MAKE A HABIT</h1>
            <div class="row row-cols-auto d-flex justify-content-center">
                <% habits.forEach( el => { %>
                    <% if(el.type == 'make'){ %>
                        <div class="card col m-2 card-habit d-flex justify-content-center <%= el.completed === true ? 'completed' : 'not'%>" 
                            style=" border: 3px solid <%= el.habitColor %> ;">
                            <div class="habitItem d-flex justify-content-between align-items-center" data-id='<%=el._id%>'>
                                <div>
                                    <h5 class='card-title'><%= el.habit %></h5>
                                  
                                </div>
                                <div>
                                    <i class="editBtn bi bi-pencil icon-md align-self-center" style="color: <%= el.habitColor %>"></i>
                                    <i class="deleteBtn bi bi-trash3 icon-md align-self-center" style="color: <%= el.habitColor %>"></i>
                                </div>                            </div>
                        </div>
                    <% }; %>
                <% }) %> 
                <!-- <a href="/edit" class="card col m-2 card-habit d-flex justify-content-center align-items-center"><i class="bi bi-plus-circle icon-lg"></i></a> -->
               
            </div>
        </div>

<!-- BREAK HABIT -->
        <div class="col container d-flex flex-column align-items-center mt-5">
            <h1 class="font-anton">MAKE A HABIT</h1>            
            <div class="row row-cols-auto d-flex justify-content-center">
                <% habits.forEach( el => { %>
                    <% if(el.type == 'break'){ %>
                        <div class="card col m-2 p-2 card-habit d-flex justify-content-center <%= el.completed === true ? 'completed' : 'not'%>" 
                            style=" border: 3px solid <%= el.habitColor %> ;">
                            <div class="habitItem d-flex justify-content-between align-items-center" data-id='<%=el._id%>'>
                                <div>
                                    <h5 class='card-title'><%= el.habit %></h5>
                                    
                                </div>
                                <div>
                                    <i class="editBtn bi bi-pencil icon-md align-self-center" style="color: <%= el.habitColor %>"></i>
                                    <i class="deleteBtn bi bi-trash3 icon-md align-self-center" style="color: <%= el.habitColor %>"></i>
                                </div>
                            </div>
                        </div>
                    <% }; %>
                <% }) %> 
                <!-- <a href="/edit" class="card col m-2 card-habit d-flex justify-content-center align-items-center"><i class="bi bi-plus-circle icon-lg"></i></a> -->
                
            </div>
        </div>
</div>
  

<!-- Modal -->
        <div class="modal fade" id="addHabitModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title font-anton" id="exampleModalLabel">Track New Habit</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/edit/createHabit" method='POST' class="d-flex flex-column">
                            <div class="mb-3">
                                <input type="text" placeholder="Enter Habit" class="form-control" id="habitName" name='habitItem'>
                            </div>
                            <div class="mb-3 font-anton">
                                <input type="radio" class="btn-check" name="type" id="make" value="make">
                                <label class="btn btn-secondary" for="make">Make a Habit</label>
                                <input type="radio" class="btn-check" name="type" id="break" value="break">
                                <label class="btn btn-secondary" for="break">Break a Habit</label>
                            </div>
                            <div class="mb-3 d-flex">
                                <label for="habitColor" class="form-label">Choose Color:</label>
                                <input type="color" class="form-control w-25 mx-3" id="habitColor" name='habitColor' value="#6495ED">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <input type="submit" class="btn btn-primary" value="add">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        

    <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        <div class="col-md-4 d-flex align-items-center">
          <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
            <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
          </a>
          <span class="mb-3 mb-md-0 text-muted">Â© 2023 Karissa Lange</span>
        </div>
        <button id="refreshBtn" class="btn btn-outline-dark">Reset Day</button>

        <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
            <i class="bi bi-file-person icon-md"></i>
        </ul>
      </footer>

    <!-- Bootstrap 5.2 JS link -->
    <script src="public/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>